<div class="row">
  <div class="col s12 m8">
    <h3>{{story.title}}</h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
        {{{story.body}}}
      </div>
    </div>
    {{#if story.allowComments}}
    <div class="card">
      <div class="card-content">
        <span class="card-title">Comments</span>
        {{#if user}}
        <form method="POST" action="/stories/comment/{{story._id}}">
          <div class="input-field">
            <textarea name="commentsBody" id="comment-textarea"
              class="materialize-textarea"></textarea>
            <label for="comment-textarea"></label>
          </div>
          <input type="submit" value="submit" class="btn">
        </form>
        {{else}}
        <p>Please <a href="/auth/google">log in</a> to leave a comment</p>
        {{/if}}
      </div>
    </div>
    {{#each story.comments}}
    <div class="card">
      <div class="card-content">
        <h5>{{commentsBody}}</h5>
        <div class="chip"><img
            src="{{commentUser.image}}">{{commentUser.firstName}}
          {{commentUser.lastName}}
        </div>
        <br>
        <small>Posted: {{formatDate commentDate 'MMMM Do YYYY'}}</small>
      </div>
    </div>
    {{/each}}
    {{/if}}
  </div>
  <div class="col s12 m4">
    <div class="card card-align">
      <div class="card-content">
        <span class="card-title">{{story.user.firstName}}
          {{story.user.lastName}}</span>
        <img src="{{story.user.image}}" alt="" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/stories/user/{{story.user.id}}">More From
          {{story.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>